@using Vidly4.Models
@model Vidly4.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "Add or edit movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.FormType</h2>

@using (Html.BeginForm("Save", "Movies"))
{
<div class="form-group">
    @Html.ValidationSummary()

    <br />

    @Html.LabelFor(m => m.Movie.Name)
    @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Movie.Name)

    @Html.LabelFor(m => m.Movie.ReleaseDate)
    @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)

    @Html.LabelFor(m => m.Movie.MovieGenereId)
    @Html.DropDownListFor(m => m.Movie.MovieGenereId, new SelectList(Model.MovieGeneres, "Id", "GenereName"), "select genere", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Movie.MovieGenereId)

    @Html.LabelFor(m => m.Movie.NumberInStock)
    @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Movie.NumberInStock)

    <br />
    <button type="submit" class="btn btn-primary">Save</button>




    @Scripts.Render("~/bundles/jquery")
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Movie.Id)
</div>
}