@using Vidly4.Models
@model Vidly4.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "Add or edit movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.FormType</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.ValidationSummary()

        <br />

        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)

        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleaseDate)

        @Html.LabelFor(m => m.MovieGenereId)
        @Html.DropDownListFor(m => m.MovieGenereId, new SelectList(Model.MovieGeneres, "Id", "GenereName"), "select genere", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MovieGenereId)

        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock)

        <br />
        <button type="submit" class="btn btn-primary">Save</button>

        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jquery")
}

